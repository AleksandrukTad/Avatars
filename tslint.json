{
    "extends": [
      "tslint:latest",
      "tslint-react",
      "tslint:recommended",
      "tslint-plugin-prettier",
      "tslint-config-prettier"
    ],
    "rules": {
      "jsx-no-lambda": false,
      "no-duplicate-imports": false,
      "no-implicit-dependencies": [
        true,
        "dev",
        [
          "@/app"
        ]
      ],
      "no-submodule-imports": [
        false,
        "@/app"
      ],
      "no-relative-imports": [
        true,
        "allow-siblings"
      ],
      "prettier": true
    }
  }